{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    // for electron debug code visit: https://www.electronjs.org/docs/latest/tutorial/debugging-vscode
    {
        "version": "0.2.0",
        "compounds": [
          {
            "name": "Main + renderer",
            "configurations": ["Main", "Renderer"],
            "stopAll": true
          }
        ],
        "configurations": [
          {
            "name": "Renderer",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}/www/"
          },
          {
            "name": "Main",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/electron-app/",
            "runtimeExecutable": "${workspaceFolder}/electron-app/node_modules/.bin/electron",
            "windows": {
              "runtimeExecutable": "${workspaceFolder}/electron-app/node_modules/.bin/electron.cmd"
            },
            "args": [".", "--remote-debugging-port=9222"],
            "outputCapture": "std",
            "console": "integratedTerminal"
          }
        ]
      }